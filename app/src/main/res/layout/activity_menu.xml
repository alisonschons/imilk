<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alisonschons.imilk30.menu">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Aponte seu aparelho para o código QR"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <RelativeLayout
        android:id="@+id/surfaceview"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent">

    </RelativeLayout>

    <TextView
        android:id="@+id/dataatual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surfaceview"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Data atual"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surfaceview"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:text="Não consegue escanear o código?"
        />

    <TextView
        android:id="@+id/clique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surfaceview"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Clique aqui!"
        />

</RelativeLayout>
